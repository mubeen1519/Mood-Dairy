<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MoodApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/dayWord</item>
        <item name="colorPrimaryVariant">@color/dayWord</item>
        <item name="bottomAppBarStyle">@style/BottomBack</item>

    </style>

    <style name="Theme.MoodApp" parent="Base.Theme.MoodApp" />

    <style name="Theme.MoodCheckApp" parent="Theme.Material3.Light.NoActionBar" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="FabShapeOverlay" parent="">
        <item name="cornerSize">50%</item> <!-- Adjust this value as needed -->
    </style>


        <style name="BottomBack"><item name="android:background">@color/white</item></style>
    <style name="BottomBackground">
        <item name="android:background">@color/white</item>
    </style>

    <style name="IconColor">
        <item name="itemIconTint">@color/color_day</item>
        <item name="android:background">@color/white</item>
    </style>


    <style name="Background">
        <item name="android:background">@color/lig_bkg</item>
    </style>

    <style name="ViewsBackground">
        <item name="android:background">@color/dayViewBack</item>
    </style>

    <style name="WordColor">
        <item name="android:textColor">#F0000000</item>
    </style>

    <style name="ComponentsColor">
        <item name="android:tint">#000000</item>
    </style>

    <style name="DividerColor">
        <item name="android:background">@color/black</item>
    </style>

    <style name="DialogColor">
        <item name="android:background">@color/second_bkg</item>
    </style>


    <style name="WordSeeAll">
        <item name="android:textColor">@color/mid_blue</item>
    </style>

    <style name="WordStatic">
        <item name="android:textColor">#F0000000</item>
    </style>

    <style name="WordStaticN">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="fingerPrint">
        <item name="android:src">@drawable/dayprint</item>
    </style>

    <style name="reminder">
        <item name="android:src">@drawable/reminderday</item>
    </style>

    <style name="darkMode">
        <item name="android:src">@drawable/daymode</item>
    </style>

    <style name="Policy">
        <item name="android:src">@drawable/ppday</item>
    </style>

    <style name="Profile">
        <item name="android:src">@drawable/profileday</item>
    </style>

    <style name="WordSize">
        <item name="android:src">@drawable/sizeday</item>
    </style>


    <style name="RoundedLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/_20sdp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:background">@drawable/rounded_background
        </item> <!-- Set the rounded background drawable -->
        <item name="android:orientation">vertical</item>
    </style>

    <style name="CustomFrameLayout">
        <item name="android:layout_width">@dimen/_100sdp</item>
        <item name="android:layout_height">@dimen/_100sdp</item>
        <item name="android:background">@drawable/dashed_border</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_margin">@dimen/_8sdp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>


</resources>